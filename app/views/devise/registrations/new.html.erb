<h2>Criar uma nova conta</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fullname, label: "Nome completo" %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password, label: "Senha", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Confirmação de senha", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Começar agora" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
