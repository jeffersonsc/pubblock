<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fullname, label: "Nome completo" %>
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label: "Senha", autocomplete: "off", hint: "A senha nao pode está em branco ou ser a mesma", required: false %>
    <%= f.input :password_confirmation, label: "Confirmação da senha" required: false %>
    <%= f.input :current_password, hint: "Digite sua senha atual", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Alterar minha conta" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Deseja apagar sua conta?" }, method: :delete %></p>

<%= link_to "Voltar", :back %>
