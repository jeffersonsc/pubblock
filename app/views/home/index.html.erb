<h1>Todos livros</h1>

<table class="table table-responsive">
	<tr>
		<th>Nome</th>
		<th>Autor</th>
		<th></th>
	</tr>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.book_file_identifier %></td>
				<td><%= book.user.fullname %></td>
				<td><%= link_to "Comprar", new_order_url(book_id: book.id) %></td>				
			</tr>
		<% end %>
	</tbody>
</table>
